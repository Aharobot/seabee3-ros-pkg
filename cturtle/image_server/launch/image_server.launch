<launch>
	<arg name="enable_reconfigure" default="false" />

	<arg name="image_server_name_prefix" default="color_classifier" />
	<arg name="image_server_name_postfix" default="" />
	<arg name="prefix" default="$(find seabee3_launch)/frames/frame00" />
	<arg name="ext" default=".jpg" />
	<arg name="digits" default="2" />
	<arg name="start" default="0" />
	<arg name="end" default="16" />
	<arg name="rate" default="10" />

	<arg name="image_server_name" value="$(arg image_server_name_prefix)$(arg image_server_name_postfix)" />

	<node pkg="image_server" type="image_server_node" name="$(arg image_server_name)" output="screen" args="_prefix:=$(arg prefix) _ext:='$(arg ext)' _digits:=$(arg digits) _start:=$(arg start) _end:=$(arg end) _rate:=$(arg rate)" />
	<group if="$(arg enable_reconfigure)" >
		<node pkg="dynamic_reconfigure" type="reconfigure_gui" name="$(arg image_server_name)_config" args="$(arg image_server_name)/reconfigure" />
	</group>
</launch>
